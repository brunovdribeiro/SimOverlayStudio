{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist-electron",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "sourceMap": true
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/window.ts",
    "src/tray.ts",
    "src/backend-manager.ts",
    "src/types/electron.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "src/**/*.tsx",
    "src/App.tsx",
    "src/main.tsx"
  ]
}
